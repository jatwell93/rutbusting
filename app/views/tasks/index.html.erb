<table class="table table-bordered table-striped" id="sortable">
  <thead class="thead-inverse">
    <tr>
      <th>
        Title
      </th>
      <th>
        Description
      </th>
      <th>
        Description
      </th>
    </tr>
  </thead>
  <tbody>
  <%= link_to 'new', new_task_path(@tasks), :class => 'btn btn-primary' %>
    <% @tasks.each do |task| %>
      <tr data-item-id=<%= "#{task.id}" %> class="item">
        <td>
          <%= task.title %>
        </td>
        <td>
          <%= task.description %>
        </td>
        <td>
          <%= link_to 'show', task_path(task), :class => 'btn btn-info' %>
          <%= link_to "Destroy", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
          <%= link_to 'edit', edit_task_path(task), :class => 'btn btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css">