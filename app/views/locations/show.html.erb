<div class="row">
  <div class="col-md-8">
    <img><%= image_tag @location.image_url %>
    
    <h2>
      <%= @location.name %>
    </h2>
    
    <p>
      <strong>Address:</strong>
      <%= @location.address %>
    </p>
    
    <p>
      <strong>Website:</strong>
      <%= @location.website %>
    </p>    
    
      <%= link_to 'Leave a Review', new_location_review_path(@location), class:"btn btn-success"%>
  </div>
</br>
  <div class="col-md-4">
    <h2>Reviews for: <%= @location.name %></h2>
    <% if @reviews.blank? %>  
      <div class='well'>No reviews yet. Be the first to write one!</br>
        <%= link_to 'Leave a Review', new_location_review_path(@location), class:"btn btn-success"%>
      </div>
    <% else %>
      <% @reviews.each do |r| %>
        <div class="well">
          <div class="star-rating"></div>  
          <p><%= r.rating %></p>
          <p><%= r.comment %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
  <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-warning" %> 
  <%= link_to 'Back', locations_path, class:"btn btn-primary" %>
<script>
  $('.star-rating').raty({
    path: 'https://s3-ap-southeast-2.amazonaws.com/rutbustin1/stars/'
  });
</script>