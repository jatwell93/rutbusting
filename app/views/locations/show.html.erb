<div class="row">
  <div class="col-md-8">
    <img><%= image_tag @location.image_url %>
    
    <h2>
      <%= @location.name %>
    </h2>
    
    <div class="star-rating" data-score=<%= @avg_rating %>></div> 
    <p><%= "#{@reviews.length} reviews" %></p>
    
    <p>
      <strong>Address:</strong>
      <%= @location.address %>
    </p>
    
    <p>
      <strong>Website:</strong>
      <%= @location.website %>
    </p>    
    
      <%= link_to 'Leave a Review', new_location_review_path(@location), class:"btn btn-success"%>
  </div>
</br>
  <div class="col-md-4">
    <h2>Reviews for: <%= @location.name %></h2>
    <% if @reviews.blank? %>  
      <div class='well'>No reviews yet. Be the first to write one!</br>
        <%= link_to 'Leave a Review', new_location_review_path(@location), class:"btn btn-success"%>
      </div>
    <% else %>
      <table class="table table-hover table-responsive">  
        <tbody>
          <% @reviews.each do |r| %>
            <tr>
              <td>
                <div class="star-rating" data-score=<%= r.rating %>></div>  
                <p><%= h(r.comment).gsub(/\n/, '<br/>').html_safe %></p>
                <p>
                 <span class='quiet'><small>Created: <%= time_ago_in_words(r.created_at)%> ago</small></span>
               </p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
  <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-warning" %> 
  <%= link_to 'Back', locations_path, class:"btn btn-primary" %>
<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/rutbustin1/stars/', 
    readOnly : true,
      score: function() {
        return $(this).attr('data-score');
      }
  });
</script>